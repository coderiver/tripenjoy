                input(type="text", placeholder="ДД")
                input(type="text", placeholder="ММ")
                input(type="text", placeholder="ГГГГ")
          td
            .select-sex
              label.select-sex__radio-btn
                input(type="radio", name="sex-second", checked)
                i.ico.ico_male.is-active
              label.select-sex__radio-btn
                input(type="radio", name="sex-second")
                i.ico.ico_female
              label.select-sex__radio-btn
                input(type="radio", name="sex-second")
                i.ico.ico_kid
        tr
          td
            .passenger__document
              .input
                span.input__label
                  | Документ:
                label.radio
                  input(type="radio", name="document-second", checked)
                  span заграничный
                label.radio
                  input(type="radio", name="document-second")
                  span общенациональный
                label.radio
                  input(type="radio", name="document-second")
                  span свидетельство
          td
            .passenger__nationality
              .input
                span.input__label
                  | Гражданство:
                .select
                  span.select__value
                  ul.select__drop
