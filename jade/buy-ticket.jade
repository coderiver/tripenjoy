  .head
    .l-center
      h3.title
        | Данные пассажиров
      p.head__text
        | Введите данные пассажирова для бронирования и дальнейшей оплаты.

  .l-center
    //begin passenger
    .passenger
      table.passenger__table
        tr
          td(rowspan="2")
            span.passenger__number
              | 1
            span.passenger__type
              | Взрослый
          td
            .passenger__lastname
              .input.input_simple
                span.input__label
                  | Фамилия:
                input(type="text")
          td
            .passenger__firstname
              .input.input_simple
                span.input__label
                  | Имя:
                input(type="text")
          td
            .passenger__surname
              .input.input_simple
                span.input__label
                  | Отчество:
                input(type="text")
          td
            .passenger__date
              .input.input_simple
                span.input__label
                  | Дата рождения:
                input(type="text", placeholder="ДД")
                input(type="text", placeholder="ММ")
                input(type="text", placeholder="ГГГГ")
          td
            .select-sex
              label.select-sex__radio-btn
                input(type="radio", name="sex")
                i.ico.ico_male.is-active
              label.select-sex__radio-btn
                input(type="radio", name="sex", checked)
                i.ico.ico_female
              label.select-sex__radio-btn
                input(type="radio", name="sex")
                i.ico.ico_kid
        tr
          td
            .passenger__document
              .input
                span.input__label
                  | Документ:
                label.radio
                  input(type="radio", name="document", checked)
                  span заграничный
                label.radio
                  input(type="radio", name="document")
                  span общенациональный
                label.radio
                  input(type="radio", name="document")
                  span свидетельство
          td
            .passenger__nationality
              .input
                span.input__label
                  | Гражданство:
                .select
                  span.select__value
                  ul.select__drop
                    - var i = 1
                    each item in ['Гражданство 1', 'Гражданство 2', 'Гражданство 3']
                      li(data-option=i++)= item
          td
            .passenger__passport
              .input.input_simple
                span.input__label
                  | Серия:
                input(type="text")
              .input.input_simple
                span.input__label
                  | Номер:
                input(type="text")
          td
            .passenger__date
              .input.input_simple
                span.input__label
                  | Дата рождения:
                input(type="text", placeholder="ДД")
                input(type="text", placeholder="ММ")
                input(type="text", placeholder="ГГГГ")
          td
            a(href="#").passenger__clear
              i.ico.ico_clear
              | Очистить
    //end passenger
    //begin passenger
    .passenger
      table.passenger__table
        tr
          td(rowspan="2")
            span.passenger__number
              | 2
            span.passenger__type
