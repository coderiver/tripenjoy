extend layout/layout

block title
  title Login

block content
  .head
    .l-center
      h1.title
        | контакты

  .l-center
    .l-two-col
      .col1
        .head.head_small
          h3.title
            | Напишите нам
        //begin contact-form
        .contact-form
          .contact-form__row
            .input.input_simple
              span.input__label
                | Ваш вопрос о:
              .select
                span.select__value
                ul.select__drop
                  - var i = 1
                  each item in ['Вопрос 1', 'Вопрос 2', 'Вопрос 3']
                    li(data-option=i++)= item
          .contact-form__row
            .input.input_simple
              span.input__label
                | Имя:
              input(type="text")
              p.input__error-msg
                | укажите ваше имя
            .input.input_simple
              span.input__label
                | Фамилия:
              input(type="text")
              p.input__error-msg
                | укажите вашу фамилию

          .contact-form__row
            .input.input_simple
              span.input__label
                | Организация:
              input(type="text")
            .input.input_simple
              span.input__label
                | Номер телефона:
              input(type="text")

          .contact-form__row
            .input
              span.input__label
                | Ваш вопрос:
              textarea(rows="9")

          .contact-form__row.captcha
            .input.input_simple
              span.input__label
                | Введите цифры:
              input(type="text")
            .captcha__pic
              img(src="img/captcha.png")
          button(type="submit").btn
            | Отправить
        //end contact-form

        button(data-popup="login").btn.js-popup-show
            | Вызвать попап

      .col2
        //begin contacts
        .head.head_small
          h3.title
            | Свяжитесь с нами
        .contacts
          span.input__label
            | Физический адрес:
          span Россия, г. Москва <br> Манежная площадь, д.2, стр. 1
          span.input__label
            | Представительство в г. Москва:
          a(href="tel:+74952292712").tel
            | +7 495 229-27-12
          a(href="tel:+74952292712").tel
            | +7 495 229-27-12
          span.input__label
            | Представительство в г. Санкт Петербург:
          span.tel
            | +7 495 229-27-12
        //end contacts

block popup
  #login.popup.popup_has-icon
    .popup__in
      .popup__container
        .ico.ico_person2
        form(action="").login
          .login__title
           | Авторизация
          .input.input_simple
            span.input__label
              | E-mail:
            input(type="text")
          .input.input_simple
            span.input__label
              | Пароль:
              a(href="#")
                | Забыли?
            input(type="password")
          .wrap
            button(type="submit").btn
              | Войти
            button.btn.btn_gray.js-popup-hide
              | Отмена
          .login__center
            a(href="#")
              | Регистрация